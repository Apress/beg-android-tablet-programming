<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    android:id="@+id/textview"
    />
<Button android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Press Me" android:onClick="onPressClick"></Button>
<Button android:layout_width="wrap_content" android:id="@+id/button2" android:layout_height="wrap_content" android:text="@string/press" android:onClick="onPressMore"></Button>
<EditText android:layout_width="match_parent" android:text="EditText" android:layout_height="wrap_content" android:id="@+id/editText1"></EditText>
<Button android:id="@+id/button3" android:layout_height="wrap_content" android:layout_width="wrap_content" android:fadeScrollbars="true" android:text="Browse" android:onClick="onBrowseClick"></Button>
<Button android:text="Button" android:onClick="onPdfClick" android:id="@+id/button4" android:layout_height="wrap_content" android:layout_width="wrap_content"></Button>
</LinearLayout>
